def getPad(numKiloBytes):
	pad = 0
	for i in range(1,numKiloBytes):
		part = random.randint(0,2**(8000) -1)
		pad = int(str(pad) + str(part))
		print("Generated " + str(i) + " kilobytes. " + str(int(100*i/numKiloBytes)) + "% complete.")
	return pad

